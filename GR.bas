' p.127 Graphing Helper - Creating a "Nice" Axis
10 "GR" INPUT "SMALLEST VALUE? ";A
20 INPUT "LARGEST VALUE? ";B
30 INPUT "NUMBER OF DIVS? ";C
40 E=1 : F=(B-A)/C : D=10^INT LOG F
50 IF B<=D*INT(A/D)+CD THEN 80
60 E=E+1 : IF E/4<>INT(E/4) LET D=8D/5
70 D=5D/4 : GOTO 50
80 A=D*INT(A/D) : B=A+CD : C=(B-A)/C
90 PRINT "START AT ";A
100 PRINT "END AT ";B
110 PRINT "INCREMENT=";C : GOTO 1
