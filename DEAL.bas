' p.113 Games - "Deal 'Em" [ARRAY]
10 "DEAL" BEEP 1 : PAUSE "SHUFFLING" : FOR Z=27 TO 80 : A(Z)=0 : NEXT Z
20 Y=0 : R=[PI]+997R : R=R-INT R : Z=27+INT 54R
30 Y=Y+1 : IF Y=55 THEN 10
40 Z=Z+7 : Z=Z-54*(Z>80) : IF A(Z) THEN 30
45 A(Z)=1 : IF Z>78 PRINT "JOKER" : GOTO 20
50 E$="HEARTS" : IF Z>39 LET E$="SPADES" : IF Z>52 LET E$="CLUBS" : IF Z>65 LET E$="DIAMOND"
60 Z=Z-13*INT((Z-1)/13) : IF Z=1 PRINT "ACE OF ";E$ : GOTO 20
70 IF Z<11 PRINT USING "###";Z;" OF ";E$ : GOTO 20
80 X$="JACK" : IF Z>11 LET X$="QUEEN" : IF Z>12 LET X$="KING"
90 PRINT X$;" OF ";E$ : GOTO 20
