' p.117 Games - "Lunar Landing"
10 "LUNAR" X=700 : V=-100 : F=-V
20 INPUT "ALTITUDE?",X
30 INPUT "VELOCITY? (-)",V
40 INPUT "FUEL?",F
45 BEEP 2 : PAUSE "HERE WE GO!"
50 PAUSE "ALTITUDE=";X
60 PAUSE "VELOCITY=";V
70 PAUSE "FUEL LEFT=";F
80 IF F=0 GOTO 110
90 BEEP 1 : INPUT "USE HOW MUCH FUEL?",E : GOTO 110
100 GOTO 50
110 IF E>F LET E=F
120 F=F-E : A=2.3E-EF/200-2[PI] : V=V+A : X=X+V-A/2 : IF X THEN 50
130 BEEP 5 : V=-V
140 L$="NICE!" : IF V>5 LET L$="OK"
150 IF V>12 LET L$="BUMPY"
160 IF V>21 LET L$="CRUNCH"
170 IF V>29 LET L$="CRASH"
180 IF V>47 LET L$="CRATER"
200 PRINT L$;", VEL=";V : GOTO 1
